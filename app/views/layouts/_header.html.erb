<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <div class="col-md-2">
            <%= link_to image_tag("decidea_logo.png", width: 170, alt: "Decidea logo"),
      root_path, id: "logo" %>
        </div>
        <div class="col-md-3">
            <ul class="nav navbar-nav">
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "Job Board", job_posts_path %></li>
            </ul>
        </div>
        <div>
            <div class="col-md-4">
                <div class="input-group" id="search-bar">
                    <input type="text" class="form-control" placeholder="Search Job or Portfolio">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                          <%= image_tag("icon_search.png", width: 15, alt: "Search") %>
                        </button>
                    </span>
                </div>
                <!-- /input-group -->
            </div>
            <div class="col-md-3">
                <ul class="nav navbar-nav navbar-right">
                    <% if logged_in? %>
                    <!-- <li><%= link_to "Portfolio", portfolios_path %></li>
                    <li><%= link_to "Post a Job", new_job_post_path %></li> -->
                    <li><%= link_to image_tag("icon_search.png", width: 15, alt: "Messages"), message_users_path %></li>
                    <li><%= link_to image_tag("icon_search.png", width: 15, alt: "Notifications"), notifications_path %></li>
                    <li><%= current_user.notifications.where(read: false).count %></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <%= image_tag("icon_search.png", width: 15, alt: "Accounts") %>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "Profile", current_user %></li>
                            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                            <li class="divider"></li>
                            <li>
                                <%= link_to "Log out", logout_path, method: "delete" %>
                            </li>
                        </ul>
                    </li>

                <% else %>
                    <li><%= link_to "Log in", login_path %></li>
                    <li><%= link_to "Regsiter", signup_path %></li>
                  <% end %>
                </div>
            </ul>
        </nav>
    </div>
