<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("decidea_logo.png", length: 300, width: 120, alt: "Decidea logo"),
      root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left" id="left_header">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Job Board", job_posts_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "Portfolio", portfolios_path %></li>
          <li><%= link_to "Post a Job", new_job_post_path %></li>
          <li><%= link_to "Message", message_users_path %></li>
          <li><%= link_to "Notification", notifications_path %></li>
          <li><%= current_user.notifications.where(read: false).count %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Regsiter", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
